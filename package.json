{
  "name": "vscode-quick-terminals",
  "publisher": "luxass",
  "displayName": "Quick Terminals",
  "version": "0.0.1",
  "description": "Open multiple terminals at the same time.",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/vscode-quick-terminals"
  },
  "bugs": {
    "url": "https://github.com/luxass/vscode-quick-terminals/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.68.0"
  },
  "packageManager": "pnpm@7.18.0",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quickTerminals.open-terminal",
        "title": "Open Terminal",
        "category": "Quick Terminals"
      },
      {
        "command": "quickTerminals.open-terminals",
        "title": "Open Terminals",
        "category": "Quick Terminals"
      },
      {
        "command": "quickTerminals.open-preset",
        "title": "Open Preset",
        "category": "Quick Terminals"
      }
    ],
    "configuration": {
      "title": "Quick Terminals",
      "properties": {
        "quickTerminals.terminals": {
          "type": "array",
          "description": "The terminals to open on startup.",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "The id of the terminal."
              },
              "name": {
                "type": "string",
                "description": "The name of the terminal."
              },
              "color": {
                "type": "string",
                "description": "The color of the terminal.",
                "enum": [
                  "black",
                  "red",
                  "green",
                  "yellow",
                  "blue",
                  "magenta",
                  "cyan",
                  "white"
                ],
                "default": "white"
              },
              "cwd": {
                "type": "string",
                "description": "The current working directory of the terminal."
              },
              "command": {
                "type": "string",
                "description": "The command to run in the terminal."
              },
              "show": {
                "type": "boolean",
                "description": "Whether to show the terminal.",
                "default": true
              },
              "shellPath": {
                "type": "string",
                "description": "The path to the shell executable."
              },
              "shellArgs": {
                "description": "The arguments to pass to the shell executable.",
                "oneOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "env": {
                "type": "object",
                "description": "The environment of the terminal.",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "message": {
                "type": "string",
                "description": "The message to send to the terminal."
              },
              "icon": {
                "description": "The icon to use for the terminal.",
                "type": "string",
                "default": "terminal-view-icon"
              },
              "split": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The id of the terminal."
                    },
                    "name": {
                      "type": "string",
                      "description": "The name of the terminal."
                    },
                    "color": {
                      "type": "string",
                      "description": "The color of the terminal.",
                      "enum": [
                        "black",
                        "red",
                        "green",
                        "yellow",
                        "blue",
                        "magenta",
                        "cyan",
                        "white"
                      ],
                      "default": "white"
                    },
                    "cwd": {
                      "type": "string",
                      "description": "The current working directory of the terminal."
                    },
                    "preventCwdPrepend": {
                      "type": "boolean",
                      "description": "Whether to prevent the preset cwd to be prepended to terminal cwd.",
                      "default": false
                    },
                    "command": {
                      "type": "string",
                      "description": "The command to run in the terminal."
                    },
                    "show": {
                      "type": "boolean",
                      "description": "Whether to show the terminal.",
                      "default": true
                    },
                    "shellPath": {
                      "type": "string",
                      "description": "The path to the shell executable."
                    },
                    "shellArgs": {
                      "description": "The arguments to pass to the shell executable.",
                      "oneOf": [
                        {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        {
                          "type": "string"
                        }
                      ]
                    },
                    "env": {
                      "type": "object",
                      "description": "The environment of the terminal.",
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "message": {
                      "type": "string",
                      "description": "The message to send to the terminal."
                    },
                    "icon": {
                      "description": "The icon to use for the terminal.",
                      "type": "string",
                      "default": "terminal-view-icon"
                    }
                  }
                }
              }
            },
            "additionalProperties": false,
            "required": [
              "id"
            ]
          }
        },
        "quickTerminals.presets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the preset."
              },
              "shellPath": {
                "type": "string",
                "description": "The path to the shell executable."
              },
              "shellArgs": {
                "description": "The arguments to pass to the shell executable.",
                "oneOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "cwd": {
                "type": "string",
                "description": "The current working directory of the preset. (this will be prepended to the cwd of the terminals)"
              },
              "env": {
                "type": "object",
                "description": "The environment of the terminal.",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "terminals": {
                "type": "array",
                "description": "The terminals to open on startup.",
                "default": [],
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The id of the terminal."
                    },
                    "name": {
                      "type": "string",
                      "description": "The name of the terminal."
                    },
                    "color": {
                      "type": "string",
                      "description": "The color of the terminal.",
                      "enum": [
                        "black",
                        "red",
                        "green",
                        "yellow",
                        "blue",
                        "magenta",
                        "cyan",
                        "white"
                      ],
                      "default": "white"
                    },
                    "cwd": {
                      "type": "string",
                      "description": "The current working directory of the terminal."
                    },
                    "preventCwdPrepend": {
                      "type": "boolean",
                      "description": "Whether to prevent the preset cwd to be prepended to terminal cwd.",
                      "default": false
                    },
                    "command": {
                      "type": "string",
                      "description": "The command to run in the terminal."
                    },
                    "show": {
                      "type": "boolean",
                      "description": "Whether to show the terminal.",
                      "default": true
                    },
                    "shellPath": {
                      "type": "string",
                      "description": "The path to the shell executable."
                    },
                    "shellArgs": {
                      "description": "The arguments to pass to the shell executable.",
                      "oneOf": [
                        {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        {
                          "type": "string"
                        }
                      ]
                    },
                    "env": {
                      "type": "object",
                      "description": "The environment of the terminal.",
                      "additionalProperties": {
                        "type": "string"
                      }
                    },
                    "message": {
                      "type": "string",
                      "description": "The message to send to the terminal."
                    },
                    "icon": {
                      "description": "The icon to use for the terminal.",
                      "type": "string",
                      "default": "terminal-view-icon"
                    },
                    "split": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "The id of the terminal."
                          },
                          "name": {
                            "type": "string",
                            "description": "The name of the terminal."
                          },
                          "color": {
                            "type": "string",
                            "description": "The color of the terminal.",
                            "enum": [
                              "black",
                              "red",
                              "green",
                              "yellow",
                              "blue",
                              "magenta",
                              "cyan",
                              "white"
                            ],
                            "default": "white"
                          },
                          "cwd": {
                            "type": "string",
                            "description": "The current working directory of the terminal."
                          },
                          "preventCwdPrepend": {
                            "type": "boolean",
                            "description": "Whether to prevent the preset cwd to be prepended to terminal cwd.",
                            "default": false
                          },
                          "command": {
                            "type": "string",
                            "description": "The command to run in the terminal."
                          },
                          "show": {
                            "type": "boolean",
                            "description": "Whether to show the terminal.",
                            "default": true
                          },
                          "shellPath": {
                            "type": "string",
                            "description": "The path to the shell executable."
                          },
                          "shellArgs": {
                            "description": "The arguments to pass to the shell executable.",
                            "oneOf": [
                              {
                                "type": "array",
                                "items": {
                                  "type": "string"
                                }
                              },
                              {
                                "type": "string"
                              }
                            ]
                          },
                          "env": {
                            "type": "object",
                            "description": "The environment of the terminal.",
                            "additionalProperties": {
                              "type": "string"
                            }
                          },
                          "message": {
                            "type": "string",
                            "description": "The message to send to the terminal."
                          },
                          "icon": {
                            "description": "The icon to use for the terminal.",
                            "type": "string",
                            "default": "terminal-view-icon"
                          }
                        }
                      }
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "id"
                  ]
                }
              }
            }
          }
        },
        "quickTerminals.openOnStartup": {
          "description": "Whether to open terminals or a specific preset or terminal.",
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "string",
              "examples": [
                "preset:myPreset",
                "myApi"
              ],
              "pattern": "^(preset:)?.+$"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsup --minify",
    "build": "tsup",
    "dev": "tsup --watch",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write . --cache",
    "typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^3.1.0",
    "@luxass/prettier-config": "^1.2.0",
    "@types/node": "^18.15.7",
    "@types/vscode": "1.68.0",
    "@vscode/vsce": "^2.18.0",
    "eslint": "^8.36.0",
    "prettier": "^2.8.7",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  }
}
