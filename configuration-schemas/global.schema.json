{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "quickTerminals.terminals": {
      "type": "array",
      "description": "The terminals to open on startup.",
      "default": [],
      "items": {
        "type": "object",
        "$include": [
          "terminal"
        ]
      }
    },
    "quickTerminals.openOnStartup": {
      "description": "Whether to open terminals or a specific preset or terminal.",
      "type": "string",
      "examples": [
        "preset:myPreset",
        "myApi"
      ],
      "pattern": "^(preset:)?.+$"
    }
  }
}
