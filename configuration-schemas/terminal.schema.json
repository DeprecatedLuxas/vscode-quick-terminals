{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "$include": [
      "color.schema.json"
    ],
    "id": {
      "type": "string",
      "description": "The unique identifier for a terminal"
    },
    "name": {
      "type": "string",
      "description": "The name of the terminal"
    },
    "cwd": {
      "type": "string",
      "description": "The current working directory of the terminal."
    },
    "command": {
      "oneOf": [
        {
          "type": "string",
          "description": "The command to run in the terminal."
        },
        {
          "type": "array",
          "description": "The commands to run in the terminal.",
          "items": {
            "type": "string"
          }
        }
      ]
    }
  }
}
